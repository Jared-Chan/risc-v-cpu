ifeq ($(VERILATOR_ROOT),)
VERILATOR = verilator
else
export VERILATOR_ROOT
VERILATOR = $(VERILATOR_ROOT)/bin/verilator
endif

INCLUDE_DIR := ./rtl

FILES := \
    ./rtl/sim_top.sv

TOP := sim_top

default:
	@echo "-- VERILATE & BUILD --------"
	$(VERILATOR) --binary -j 0 $(FLAGS) -y $(INCLUDE_DIR) $(FILES) --top-module $(TOP)
	@echo "-- RUN ---------------------"
	obj_dir/V$(TOP)
	@echo "-- DONE --------------------"


